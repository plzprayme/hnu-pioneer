{{> layout/sign-header}}

<div class="container">
    <br><br><br><br>

    <div class="card bg-light">
        <article class="card-body mx-auto" style="max-width: 400px;">

            <img src="/images/pioneer-logo.png" alt="pioneer" height="60" width="60"
                 style="display: block; margin-left: auto; margin-right: auto;">
            <h4 class="card-title mt-3 text-center">비밀번호 변경하기</h4>
            <form id="form-forgot">
                <input type="hidden" name="_csrf" value="{{#_csrf}}token{{/_csrf}}">
                    <div class="form-group input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
                        </div>
                        <input id="email" class="form-control" value="{{email}}" type="email" readonly>
                    </div> <!-- form-group// -->
                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                    </div>
                    <input id="password" class="form-control" placeholder="비밀번호" type="password">
                </div> <!-- form-group// -->
                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                    </div>
                    <input id="checkPassword" class="form-control" placeholder="다시한번 입력해주세요." type="password">
                </div> <!-- form-group// -->
                <p id="isCorrect" class="text-center text-danger"></p>
                <div class="form-group">
                    <button id="btn-changePassword" type="button" class="btn btn-primary btn-block">변경하기</button>
                    <button type="button" class="btn btn-danger btn-block" onclick="window.location.href='/'">취소</button>
                </div> <!-- form-group// -->
                <p class="text-center"><a href="/signup">아이디가 없으신가요?</a></p>
            </form>
        </article>
    </div> <!-- card.// -->

</div>
<br><br>

{{> layout/footer}}