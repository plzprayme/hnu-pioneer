{{> layout/header}}

<br><br><br>
<h1>회원 목록</h1>
<br>
<table class="table table-sm table-hover">
    <thead>
    <tr>
        <th scope="col">인덱스</th>
        <th scope="col">아이디</th>
        <th scope="col">이름</th>
        <th scope="col">학번</th>
        <th scope="col">참가 중인 스터디</th>
        <th scope="col">현재 권한</th>
        <th scope="col">학생 버튼</th>
        <th scope="col">리더 버튼</th>
        <th scope="col">어드민 버튼</th>
        <th scope="col">제명 버튼</th>
    </tr>
    </thead>
    <tbody>
    {{#members}}
        <tr>
            <th scope="row">{{idx}}</th>
            <td>{{email}}</td>
            <td>{{name}}</td>
            <td>{{studentNumber}}</td>
            <td>{{registerStudy}}</td>
            <td id="member-{{idx}}">{{role}}</td>
            <td><div id="/admin/api/v1/members/{{idx}}/role/STUDENT" name="admin-member-put" class="btn btn-success">학생
                권한 부여</div></td>

            <td><div id="/admin/api/v1/members/{{idx}}/role/LEADER" name="admin-member-put" class="btn btn-success">리더 권한 부여</div></td>
            <td><div id="/admin/api/v1/members/{{idx}}/role/ADMIN" name="admin-member-put" class="btn btn-success">어드민 권한 부여</div></td>
            <td><div id="/admin/api/v1/members/{{idx}}/role/LEADER" name="admin-delete" class="btn btn-success">제명</div></td>
        </tr>
    {{/members}}
    </tbody>
</table>
<br><br><br>
<h1>스터디 목록</h1>
<br>
<table class="table table-sm table-hover">
    <thead>
    <tr>
        <th scope="col">인덱스</th>
        <th scope="col">이름</th>
        <th scope="col">리더</th>
        <th scope="col">참가 인원</th>
        <th scope="col">참가자 이름</th>
        <th scope="col">진행 기간</th>
        <th scope="col">현재 상태</th>
        <th scope="col">모집 버튼</th>
        <th scope="col">진행 버튼</th>
        <th scope="col">종료 버튼</th>
        <th scope="col">삭제 버튼</th>
    </tr>
    </thead>
    <tbody>
    {{#studies}}
        <tr>
            <th scope="row">{{idx}}</th>
            <td>{{studyName}}</td>
            <td>{{leader}}</td>
            <td>{{currentStudyMate}}</td>
            <td>{{participantNames}}</td>
            <td>{{duration}}</td>
            <td id="study-{{idx}}">{{status}}</td>
            <td><div id="/admin/api/v1/studies/{{idx}}/status/INCRUIT" name="admin-study-put" class="btn btn-success">모집 중</div></td>
            <td><div id="/admin/api/v1/studies/{{idx}}/status/OPEN" name="admin-study-put" class="btn btn-success">진행 중</div></td>
            <td><div id="/admin/api/v1/studies/{{idx}}/status/CLOSED" name="admin-study-put" class="btn btn-success">종료</div></td>
            <td><div id="/admin/api/v1/studies/{{idx}}" name="admin-delete" class="btn btn-success">삭제</div></td>
        </tr>
    {{/studies}}
    </tbody>
</table>

{{> layout/footer}}